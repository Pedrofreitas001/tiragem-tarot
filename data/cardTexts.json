    "maj_0": {
      "name": "The Fool / O Louco",
      "modules": {
        "spirituality": {
          "en": "The Fool represents the soul's journey before incarnation - pure potential untouched by earthly experience.",
          "pt": "O Louco representa a jornada da alma antes da encarnação - potencial puro intocado pela experiência terrena."
        },
        "health": {
          "en": "Time to try new approaches to wellness. Don't be afraid to explore alternative therapies.",
          "pt": "Momento de experimentar novas abordagens para o bem-estar. Não tenha medo de explorar terapias alternativas."
        },
        "finances": {
          "en": "A leap of faith may be needed. Be open to unconventional opportunities.",
          "pt": "Um salto de fé pode ser necessário. Esteja aberto a oportunidades não convencionais."
        },
        "family": {
          "en": "Fresh dynamics are possible within family relationships. Approach old conflicts with new eyes.",
          "pt": "Novas dinâmicas são possíveis nas relações familiares. Aborde velhos conflitos com novos olhos."
        },
        "shadow": {
          "en": "Beware of recklessness disguised as spontaneity. Are you running toward something or away from responsibility?",
          "pt": "Cuidado com a imprudência disfarçada de espontaneidade. Você está correndo em direção a algo ou fugindo da responsabilidade?"
        },
        "meditation": {
          "en": "Visualize yourself standing at a cliff's edge at sunrise. What would you do if you knew you couldn't fail?",
          "pt": "Visualize-se à beira de um penhasco ao nascer do sol. O que você faria se soubesse que não poderia falhar?"
        },
        "affirmation": {
          "en": "I trust the journey. I embrace new beginnings with joy and courage.",
          "pt": "Eu confio na jornada. Eu abraço novos começos com alegria e coragem."
        },
        "daily_message": {
          "en": "Today invites you to take a chance. That idea you've been hesitant about? The universe is giving you the green light.",
          "pt": "Hoje convida você a arriscar. Aquela ideia sobre a qual você hesitava? O universo está dando luz verde."
        },
        "yes_no": {
          "en": "Yes, but proceed with awareness.",
          "pt": "Sim, mas prossiga com consciência."
        },
        "timing": {
          "en": "Spring energy. New moons. The beginning of any cycle.",
          "pt": "Energia de primavera. Luas novas. O início de qualquer ciclo."
        },
        "crystals": {
          "en": "Clear Quartz, Turquoise, Citrine",
          "pt": "Quartzo Transparente, Turquesa, Citrino"
        }
      }
    },

